#include <iostream>   
#include <string>     

using namespace std;  


int ReadNumberN()
{
    int N;
    cout << "Please enter Number N ? " << endl;
    cin >> N;
    return N;
}

void PrintNUsingFor(int N) {
    cout << "from For  " << endl;
   for (int i = 1; i <= N; i++) {
       cout << i << endl;
      
   }
   cout << "----------------------------"<<endl;
}
void PrintNUsingWhile(int N) {
    cout << "From While " << endl;
     int counter = 1;
    while (counter <=N ){
        cout <<counter << endl;
        counter++;
    }
    
}

void PrintNUsingDo(int N) {

    int counter = 1;
    cout << " From Do :" << endl;
    do {
        cout << counter << endl;
        counter++;
    } while (counter <= N);
}



int main()
{ 
    int N = ReadNumberN();
    
    PrintNUsingFor(N);
    PrintNUsingWhile(N);
    PrintNUsingDo(N);


    return 0;
}
