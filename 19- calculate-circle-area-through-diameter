#include <iostream>
using namespace std;

float ReadDiameter() {
    float D;
    cout << "Please enter  Diameter : ";
    cin >> D;
    return D;

}

float CalculateCircleAreaThroughDiameter(float D) {
    const float Pi = 3.14;
    float Area;
    Area = (Pi * pow(D, 2)) / 4;
    return Area;

}

void PrintArea(float Area) {
    cout << "Circle Area Through Diameter = " << Area << endl;

}

int main() {

    PrintArea(CalculateCircleAreaThroughDiameter(ReadDiameter()));

    return 0;
}
