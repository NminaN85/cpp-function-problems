#include <iostream>   
#include <string>     

using namespace std;  
enum enOddOrEven { Odd , Even};

int ReadNumberN()
{
    int N;
    cout << "Please enter Number N ? " << endl;
    cin >> N;
    return N;
}

enOddOrEven CheckOddOrEven(int N) {
    if (N % 2 != 0) return enOddOrEven::Odd;
    else return enOddOrEven::Even;
}

int SumOfOddNumbers(int N) {
    int sum = 0;
    for (int i = 1; i <= N; i++) {
        if (CheckOddOrEven(i)==enOddOrEven::Even)
        sum += i;
    }
      
    return sum;
}

void PrintNUsingFor(int N) {
    cout << "from For  " << endl;
   for ( int i = 1; i <=N; i++) {
       cout << i << endl;
   }
   
   
   cout << "sum of Odd Numbers  = "<< SumOfOddNumbers(N) << endl;
}

void PrintNUsingWhile(int N) {

    cout << "From While " << endl;
     int counter = 1;
    while (counter <=N ){
        cout << counter << endl;
        counter++;
    }
    cout << "sum of Odd Numbers  = " << SumOfOddNumbers(N) << endl;
}

void PrintNUsingDo(int N) {

    int counter = 1;
    cout << " From Do :" << endl;
    do {
        cout << counter << endl;
        counter++;
    } while (counter <=N);
    cout << "sum of Odd Numbers  = " << SumOfOddNumbers(N) << endl;

}



int main()
{ 
    int N = ReadNumberN();
    
    PrintNUsingFor(N);
   PrintNUsingWhile(N);
   PrintNUsingDo(N);


    return 0;
}
