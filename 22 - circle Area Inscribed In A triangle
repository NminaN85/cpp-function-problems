#include <iostream>
using namespace std;

void ReadNumber(float &A , float &B) {
    float L;
    cout << "Please enter  A : ";
    cin >> A;
	cout << "Please enter  B : ";
    cin >> B;
}
float CalculateCircleArea(float A, float B) {
	const float Pi = 3.14;
    float Area;
    Area = Pi * (pow(B, 2) / 4) * ((2 * A) - B) / ((2 * A )+ B);
    return Area;
}
void PrintArea(float Area) {
    cout << "circle Area : " << Area << endl;
}


int main() {
    float A, B;
    ReadNumber(A, B);
    PrintArea(CalculateCircleArea(A, B));


    return 0;
}
