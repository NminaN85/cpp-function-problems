#include <iostream>
using namespace std;


enum enGrade{ A , B , C , D , E , F};

int ReadGrade(string Message) {
    int Grade;
    cout << Message;
    cin>> Grade;
    while (Grade < 0 || Grade > 100) {
        cout << "Invalid Grade, "<<Message;
        cin >> Grade;
	}
	return Grade;
}
enGrade ValidateGrade(int Grade) {
    if (Grade >= 90 && Grade <= 100) return  enGrade::A;
    else if (Grade < 90 && Grade >= 80)return enGrade::B;
    else if (Grade < 80 && Grade >= 70)return enGrade::C;
    else if (Grade < 70 && Grade >= 60)return enGrade::D;
    else if (Grade < 60 && Grade >= 50) return enGrade::E;
    else {
		return enGrade::F;
    }
}
void PrintGrade(enGrade Grade) {
    switch (Grade) {
	case enGrade::A: cout << "Your Grade is A" << endl; break;
	case enGrade::B: cout << "Your Grade is B" << endl; break;
	case enGrade::C: cout << "Your Grade is C" << endl; break;
	case enGrade::D: cout << "Your Grade is D" << endl; break;
    case enGrade::E: cout << "Your Grade is E" << endl; break;
	case enGrade::F: cout << "Your Grade is F" << endl; break;
    }
}
 
int main() {

	
    PrintGrade(ValidateGrade(ReadGrade("Enter your grade: ")));

    return 0;
}
