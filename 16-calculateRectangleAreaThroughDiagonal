#include <iostream>
#include<string>
#include<cmath>
using namespace std;

void ReadNumbers(float& A, float& D ) {

    cout << "Enter A ?";
    cin >> A;
    cout << "Enter D ? ";
    cin >>D;
   
}

float calculateRectangleArea(float A, float D) {
    float Area;
    Area = A * sqrt(pow(D,2)-pow(A,2));
    return Area;
}

void PrintArea(float Area) {
    cout << "Rectangle Area = " << Area << endl;
}

int main()
{
    float A;
    float D;
    ReadNumbers(A, D);
    PrintArea(calculateRectangleArea(A, D));
    return 0;
}
